@model Gerenciador.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Registro de Usuário";
}

@if (TempData["Message2"] != null)
{
    <div class="alert alert-success alert-dismissible" style="margin-top:20px">
        @TempData["Message2"]
    </div>}

<div class="hold-transition register-page">
    <div class="register-box">
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a asp-controller="Account" asp-action="Register" class="h1"><b>Cadastro</b>GDA</a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Faça seu cadastro</p>

                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="input-group mb-3">
                        <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope" asp-validation-for="Email"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock" asp-validation-for="Password"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Retype password">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock" asp-validation-for="ConfirmPassword"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="Nome" type="text" class="form-control" placeholder="Nome">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user" asp-validation-for="Nome"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="Cpf" type="text" class="form-control" placeholder="Cpf">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user" asp-validation-for="Cpf"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="Rg" type="text" class="form-control" placeholder="Rg">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user" asp-validation-for="Rg"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="Matricula" type="text" class="form-control" placeholder="Matricula">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user" asp-validation-for="Matricula"></span>
                            </div>
                        </div>
                    </div>

                    <div class="input-group mb-3">
                        <label asp-for="CursoId" class="control-label"></label>
                        <select asp-for="CursoId" class="form-control select2 select2-danger" data-dropdown-css-class="select2-danger" style="width: 100%;" asp-items="@(new SelectList(ViewBag.Endereco, "Id", "Nome"))"></select>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user-graduate"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input type="checkbox" id="agreeTerms" name="terms" value="agree">
                                <label for="agreeTerms">
                                    Eu concordo com os <a href="#">termos</a>
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Cadastrar</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>

                <a href="login.html" class="text-center">Já tem uma conta?</a>
            </div>
            <!-- /.form-box -->
        </div><!-- /.card -->
    </div>
</div>
<!-- /.register-box -->
