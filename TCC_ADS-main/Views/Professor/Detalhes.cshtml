@model Gerenciador.Models.Professor

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>
<div class="col-md-12">
    <div class="card card-danger">
        <div class="card-header">
            <h3 class="card-title">Detalhes do Professor</h3>
        </div>
        <div>
            <hr />
            <hr />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" disabled />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div>
                <a asp-action="Editar" asp-route-id="@Model.Id">Editar</a> |
                <a asp-action="Inicio">Voltar a lista</a>
            </div>
        </div>
    </div>
</div>
