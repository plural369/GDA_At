@model Gerenciador.ViewModels.EditUserViewModel

@{ ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }



<div class="card-header">
    <h3 class="card-title">Editar Usuario</h3>
</div>

<div class="col-md-12">
    <div class="card card-success">
        <div class="card-header">
            <h3 class="card-title">Editar Usuario</h3>
        </div>
        <form method="post" class="mt-3">
            <div class="form-group row">
                <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Id" disabled class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Email" class="form-control">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="UserName" class="form-control">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Nome" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Nome" class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Cpf" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Cpf" class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Rg" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Rg" class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Matricula" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Matricula" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CursoId" class="control-label"></label>
                <select asp-for="CursoId" class="form-control" asp-items="@(new SelectList(ViewBag.Curso, "Id","Nome"))"></select>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Atualiza</button>
                    <a asp-action="ListUsers" class="btn btn-primary">Cancela</a>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <h3>Nivel de Acesso</h3>
                </div>
                <div class="card-body">
                    @if (Model.Roles.Any())
                    {
                        foreach (var role in Model.Roles)
                        {
                            <h5 class="card-title">@role</h5>
                        }
                    }
                    else
                    {
                        <h5 class="card-title">Sem roles</h5>
                    }
                </div>
            </div>
        </form>
        </div>
    </div>


        <script>
            $(function () {
                bsCustomFileInput.init();
            });
        </script>
        @section Scripts {
            <script src="~/js/CustomScript.js">
    $(function () {
  bsCustomFileInput.init();
});
            </script>

        }
