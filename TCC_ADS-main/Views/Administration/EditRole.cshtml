@model Gerenciador.ViewModels.EditRoleViewModel




<div class="col-md-12">
    <div class="card card-success">
        <div class="card-header">
            <h3 class="card-title">Adicionar Permissao</h3>
        </div>
        <form method="post" class="mt-3">
            <div class="form-group row">
                <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Id" disabled class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="RoleName" class="form-control">
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Atualiza</button>
                    <a asp-action="ListRoles" class="btn btn-primary">Cancela</a>
                </div>
            </div>
            

            <div class="card">
                <div class="card-header">
                    <h3>Usuários desta role</h3>
                </div>
                <div class="card-body">
                    @if (Model.Users.Any())
                    {
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Usuario</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users)
                            {

                                <tr>
                                    <td>@user</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    }
                    else
                    {
                        <h5 class="card-title">Sem usuários</h5>
                    }
                </div>
                <div class="card-footer">
                    <a asp-controller="Administration" asp-action="EditUsersInRole"
                       asp-route-roleId="@Model.Id" class="btn btn-primary">
                        Incluir/Remover Usuário da Role
                    </a>
                </div>
            </div>
        </form>
        </div>
    </div>


        <script>
            $(function () {
                bsCustomFileInput.init();
            });
        </script>
        @section Scripts {
            <script src="~/js/CustomScript.js">
    $(function () {
  bsCustomFileInput.init();
});
            </script>

        }
