@model Gerenciador.ViewModels.CreateRoleViewModel

@{ ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }



<div class="card-header">
    <h3 class="card-title">Adicionar Permissão</h3>
</div>

<div class="col-md-12">
    <div class="card card-success">
        <div class="card-header">
            <h3 class="card-title">Adicionar Permissão</h3>
        </div>
        <form asp-action="CreateRole" method="post" class="mt-3">
            <div asp-validation-summary="All" class="text-danger">
            </div>
            <div class="form-group row">
                <label asp-for="RoleName" class="col-sm-2 col-form-label">Nível: </label>
                <div class="col-sm-10">
                    <input asp-for="RoleName" class="form-control" placeholder="Name">
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary" style="width:auto">
                        Cradastrar Permissão
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>





<script>
    $(function () {
        bsCustomFileInput.init();
    });
</script>
@section Scripts {
    <script src="~/js/CustomScript.js">
    $(function () {
  bsCustomFileInput.init();
});
    </script>

}